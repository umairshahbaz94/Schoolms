@model IEnumerable<SMS.Entities.Category>

@{
    ViewBag.Title = "ListCategory";
    Layout = "~/Views/Shared/_Layout_New.cshtml";
}

<h2>Listing-Category</h2>

<p>
    @Html.ActionLink("Create New", "AddCategory", null, new { @class = "btn btn-primary" })
</p>
<table class="table table table-bordered " id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            
            <td>

                <a href="@Url.Action("EditCategory","Category" , new {  id = item.id })" class="btn btn-danger">
                    <span class="fas fa-edit mr-2"></span>

                </a>
                |
                <a href="@Url.Action("EditCategory","Category" , new {  id = item.id })" class="btn btn-danger">
                    <span class="fas fa-trash mr-2"></span>

                </a>
                |
                <a href="@Url.Action("EditCategory","Category"  , new {  id = item.id })" class="btn btn-danger">
                    <span class="fas fa-list mr-2"></span>

                </a>



            </td>
        </tr>
        }
    </tbody>

</table>
@section scripts
{

    <script>
      $(document).ready(function () {
          $('#myTable').DataTable();
      });</script>
}