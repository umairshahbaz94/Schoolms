            @Html.EditorFor(model => model.referenceno, new { htmlAttributes = new { @class = "form-control Required" } })
            @Html.ValidationMessageFor(model => model.referenceno, "", new { @class = "text-danger"  })
        </div>
    </div>

    <div class="col-xl-3 col-lg-6 col-12 form-group">
        @Html.LabelFor(model => model.ReferenceDate, htmlAttributes: new { @class = "control-label col-md-2  datepicker ", @type = "date" })
        <div class="col-md-10">
            <input type="date" name="ReferenceDate" class = "form-control" Required/>
            @Html.ValidationMessageFor(model => model.ReferenceDate, "", new { @class = "text-danger" })
        </div>
    </div>



